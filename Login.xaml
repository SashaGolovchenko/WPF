<Window x:Class="WpfApp.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="250" Width="300">
    <Grid>
        <Label Content="Username" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,50,0,0" FontSize="10"/>
        <TextBox x:Name="usernameTextBox" Margin="79,55,10,0" VerticalAlignment="Top"/>
        <Label Content="Password" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,98,0,0" FontSize="10"/>
        <PasswordBox x:Name="passwordBox" Margin="79,103,10,0" VerticalAlignment="Top"/>
        <Button x:Name="loginButton" Content="Login" Width="100" HorizontalAlignment="Center" Click="LoginButton_Click" Margin="0,0,0,10" Height="40" VerticalAlignment="Bottom" Background="#FF5055AB" BorderThickness="0,0,0,1" BorderBrush="White" Cursor="Hand" Foreground="White" FontWeight="Medium"/>
        <Label x:Name="errorMessageLabel" Grid.Row="3" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="16" Text="ВХОД" FontWeight="Bold" Margin="0,10,0,0"/>
    </Grid>
</Window>